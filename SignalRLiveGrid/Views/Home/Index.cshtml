@{
    ViewData["Title"] = "Live Grid";
}
<link href="~/bootstrap-table/dist/bootstrap-table.css" rel="stylesheet" />
<link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12">
        <h2>use 2 brower pages to see Real time changes ;)</h2>

        <table id="table"
               data-toggle="table"
               data-silent-sort="true"
               data-pagination="true"
               data-side-pagination="client"
               data-search="true"
               data-unique-id="personId"
               data-url="/home/GetPeople">
            <thead>
                <tr>
                    <th data-field="personId" data-sortable="true">Id</th>
                    <th data-field="name" data-sortable="true">Name</th>
                    <th data-field="salary" data-sortable="true">Salary</th>
                    <th data-formatter="operateFormatter" data-events="operateEvents">Operations</th>

                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <input type="hidden" id="personId" />
                    <label>Name</label>
                    <input type="text" class="form-control" id="editName" />
                </div>
                <div class="col-md-12">
                    <label>Salary</label>
                    <input type="text" class="form-control" id="editSalary" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="save" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/bootstrap-table/dist/bootstrap-table.js"></script>
    <script src="~/aspnet/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/liveGrid.js"></script>
    <script>
      
    </script>
}
